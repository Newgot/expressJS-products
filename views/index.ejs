<!doctype html>
<html lang="ru">
    <%- include('./partials/head'); %>
<body>
    <div class="container">
        <div class="row">
            <%- products.map(product => {
                return  `
                    <div class="col-4">
                        <div class="card">
                          <div class="card-body">
                            <h5 class="card-title">${product.name}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">${product.price} ${str.currency}</h6>
                            <p class="card-text">${product.description}</p>
                          </div>
                        </div>
                    </div>
                `}).join("")
            %>
        </div>
    </div>
</body>
</html>